  "include": [
    "./test",
    "./scripts",
    "./contracts",
    "./typechain-types/**/*",
    "**/*.ts",
    "./decs.d.ts"
  ],
  "files": [
    "./hardhat.config.ts",
    "./hardhat2.config.ts"
  ]
}
